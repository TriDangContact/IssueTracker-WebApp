		"@babel/plugin-transform-runtime": "^7.9.0",
		"@babel/preset-env": "^7.2.3",
		"@babel/preset-react": "^7.8.3",
		"babel-loader": "^8.1.0",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11",
		"webpack-dev-middleware": "^3.7.2",
		"webpack-hot-middleware": "^2.25.0",
		"webpack-merge": "^4.2.2",
		"webpack-node-externals": "^1.7.2"
	}
